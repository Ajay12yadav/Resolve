generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ComplaintStatus {
  open
  in_progress
  resolved
}

model Complaint {
  id          Int             @id @default(autoincrement())
  userId      String
  title       String
  description String
  type        String
  status      ComplaintStatus @default(open)
  createdAt   DateTime        @default(now())
}